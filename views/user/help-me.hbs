  <form action="/user/help" method="post" id="contact-admin">
  <div class="well bgc">
    <div class="row">

      
      <div class="col-xs-6 col-xs-offset-3" style="">
      <h3 class="text-center"> Fill below <br>
      form.
      </h3>
        <div class="form-group text-center">
          <label for="submit">Subject</label>
          <input type="text" id="subject" name="subject" placeholder="Subject of your querry." class="form-control">
        </div>
      </div>

      <div class="col-xs-6 col-xs-offset-3" style="">
        <div class="form-group text-center">
