        <div class="form-group text-center">
          <label for="body">Main Body</label>
          <textarea cols="20" rows="6" id="body" name="body" placeholder="Enter Your Querry,Question or Suggestions Here" class="form-control" required>
          </textarea> 
        </div>
      </div>

      </div>

    <div class="text-center">
    <button type="submit" class="btn btn-warning btn-lg" name="button">
    <span class="fa fa-admin"></span> Submit</button>
