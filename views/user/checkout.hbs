<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h1>checkout</h1>
    <strong>Total: {{ total }}</strong>
    <div id="charge-error" class="alert alert-danger hidden">

    </div>

  <form action="/checkout" method="post" id="checkout-form">
    <div class="row">

      <div class="col-xs-12">
        <div class="form-group">
          <label for="name">name</label>
          <input type="text" id="name" name="" value="" class="form-control" required>
        </div>
      </div>

      <div class="col-xs-12">
        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" id="address" name="" value="" class="form-control" required>
        </div>
      </div>

      <div class="col-xs-12">
        <div class="form-group">
          <label for="bank">Bank Name</label>
          <input type="text" id="bank" name="" value="" class="form-control" required>
        </div>
      </div>

      </div>

    <button type="submit" class="btn btn-success" name="button"> Add details</button>
  </form>
